{
  "extends": [
    "plugin:flowtype/recommended",
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "flowtype",
    "prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "jest": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "DEBUG": false
  },
  "settings": {
    "import/resolver": {
      "node": {
          "paths": ["client/src"]
        }
    },
  },
  "rules": {
    "camelcase": 0,
    "consistent-return": 0,
    "import/extensions": ["off", "never"],

    "jsx-a11y/media-has-caption": 0,
    "jsx-a11y/no-noninteractive-element-interactions": 0,
    "jsx-a11y/no-static-element-interactions": ["error", {
      "handlers": [
        "onClick",
        "onMouseDown",
        "onKeyPress",
        "onKeyDown"
      ]
    }],
    "no-bitwise": ["error", { "allow": ["|"] }],
    "no-console": 0,
    "no-nested-ternary": 0,
    "no-param-reassign": 0,
    "no-prototype-builtins": 0,
    "no-return-assign": ["error", "except-parens"],
    "no-underscore-dangle": 0,
    "no-use-before-define": ["error", { "functions": false }],
    "react/forbid-prop-types": [2, {
      "forbid": [
        "any",
        "array"
      ]
    }],
    "react/jsx-filename-extension": 0,
    "react/prefer-stateless-function": 0,
    "react/prop-types": 0,
    "react/require-default-props": 0,
    "react/sort-comp": [1, {
      "order": [
        "static-methods",
        "lifecycle"
      ]
    }],
    "semi": ["error", "always"]
  }
}
